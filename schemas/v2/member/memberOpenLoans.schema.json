{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "account_id",
      "product_category",
      "open_date",
      "risk_score",
      "reasons",
      "core_status",
      "balance",
      "next_payment_due_date",
      "payment_amount_due",
      "utilization",
      "promise_date",
      "modification_date",
      "ds_status",
      "relationship",
      "contact_history",
      "monthly_payments",
      "monthly_balances"
    ],
    "additionalProperties": false,
    "properties": {
      "account_id": {
        "type": "integer"
      },
      "product_category": {
        "type": "string",
        "minLength": 1
      },
      "open_date": {
        "type": "string",
        "format": "date"
      },
      "risk_score": {
        "type": "number",
        "minimum": 0,
        "maximum": 100
      },
      "reasons": {
        "type": "array",
        "items": {
            "type": "string",
            "minLength": 1
        }
      },
      "core_status": {
        "type": "string",
        "minLength": 1
      },
      "balance": {
        "type": "number",
        "minimum": 0
      },
      "next_payment_due_date": {
        "type": "string",
        "format": "date"
      },
      "payment_amount_due": {
        "type": "number",
        "minimum": 0
      },
      "utilization": {
        "type": ["number", "null"],
        "minimum": 0,
        "maximum": 100
      },
      "promise_date": {
        "type": ["string", "null"],
        "format": "date"
      },
      "modification_date": {
        "type": ["string", "null"],
        "format": "date"
      },
      "ds_status": {
        "type": "string",
        "minLength": 1
      },
      "relationship": {
        "type": "string",
        "minLength": 1
      },
      "contact_history": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["date", "type", "notes", "status", "agent"],
          "additionalProperties": false,
          "properties": {
            "date": {
              "type": "string",
              "format": "date"
            },
            "type": {
              "type": "string",
              "minLength": 1
            },
            "notes": {
              "type": "string"
            },
            "status": {
              "type": "string",
              "minLength": 1
            },
            "agent": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      },
      "monthly_payments": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["month", "amount_due", "amount_paid"],
          "additionalProperties": false,
          "properties": {
            "month": {
              "type": "string",
              "enum": ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"]
            },
            "amount_due": {
              "type": "number",
              "minimum": 0
            },
            "amount_paid": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "minItems": 1,
        "maxItems": 13
      },
      "monthly_balances": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["month", "original_balance_or_credit", "balance"],
          "additionalProperties": false,
          "properties": {
            "month": {
              "type": "string",
              "enum": ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"]
            },
            "original_balance_or_credit": {
              "type": "number",
              "minimum": 0
            },
            "balance": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "minItems": 1,
        "maxItems": 13
      }
    }
  }
}
