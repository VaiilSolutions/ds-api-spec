{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "created_at", "agent_name", "account_id", "track", "case_status", "stage", "disposition", "dates", "notes"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "created_at": {
      "type": "string",
      "format": "date"
    },
    "agent_name": {
      "type": "string",
      "minLength": 1
    },
    "account_id": {
      "type": "integer",
      "minimum": 1
    },
    "track": {
      "type": "string",
      "minLength": 1
    },
    "case_status": {
      "type": "string",
      "minLength": 1
    },
    "stage": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "disposition": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "dates": {
      "type": ["object", "null"],
      "patternProperties": {
        ".*": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "notes": {
      "type": ["string", "null"],
      "minLength": 1
    }
  }
}
