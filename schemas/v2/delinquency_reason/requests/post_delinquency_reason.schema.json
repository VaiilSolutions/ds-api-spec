{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["reasons", "notes"],
  "additionalProperties": false,
  "properties": {
    "reasons": {
      "type": "array",
      "items": {
          "type": "string",
          "minLength": 1
      },
      "minItems": 1
    },
    "notes": {
      "type": ["string", "null"],
      "minLength": 1
    }
  }
}
