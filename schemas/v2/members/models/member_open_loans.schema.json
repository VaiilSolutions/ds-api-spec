{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "account_id",
      "product_category",
      "open_date",
      "risk_score",
      "reasons",
      "core_status",
      "balance",
      "next_payment_due_date",
      "payment_amount_due",
      "days_past_due",
      "utilization",
      "promise_date",
      "modification_date",
      "ds_status",
      "relationship",
      "product_rate",
      "term",
      "collateral_description",
      "collection_statuses",
      "delinquency_reasons",
      "contact_logs",
      "monthly_payments",
      "monthly_balances"
    ],
    "additionalProperties": false,
    "properties": {
      "account_id": {
        "type": "integer"
      },
      "product_category": {
        "type": "string",
        "minLength": 1
      },
      "open_date": {
        "type": "string",
        "format": "date"
      },
      "risk_score": {
        "type": "number",
        "minimum": 0,
        "maximum": 100
      },
      "reasons": {
        "type": "array",
        "items": {
            "type": "string",
            "minLength": 1
        }
      },
      "core_status": {
        "type": "string",
        "minLength": 1
      },
      "balance": {
        "type": "number",
        "minimum": 0
      },
      "days_past_due": {
        "type": ["number", "null"],
        "minimum": 0
      },
      "next_payment_due_date": {
        "type": "string",
        "format": "date"
      },
      "payment_amount_due": {
        "type": "number",
        "minimum": 0
      },
      "utilization": {
        "type": ["number", "null"],
        "minimum": 0,
        "maximum": 100
      },
      "promise_date": {
        "type": ["string", "null"],
        "format": "date"
      },
      "modification_date": {
        "type": ["string", "null"],
        "format": "date"
      },
      "ds_status": {
        "type": "string",
        "minLength": 1
      },
      "relationship": {
        "type": "string",
        "minLength": 1
      },
      "product_rate": {
        "type": ["number", "null"],
        "minimum": 0,
        "maximum": 100
      },
      "term": {
        "type": ["number", "null"],
        "minimum": 0
      },
      "collateral_description": {
        "type": ["string", "null"],
        "minLength": 1
      },
      "card_number": {
        "type": ["string", "null"],
      },
      "monthly_payments": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["month", "amount_due", "amount_paid"],
          "additionalProperties": false,
          "properties": {
            "month": {
              "type": "string",
              "enum": ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"]
            },
            "amount_due": {
              "type": "number",
              "minimum": 0
            },
            "amount_paid": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "minItems": 1,
        "maxItems": 13
      },
      "monthly_balances": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["month", "original_balance_or_credit", "original_balance_credit", "balance"],
          "additionalProperties": false,
          "properties": {
            "month": {
              "type": "string",
              "enum": ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"]
            },
            "original_balance_or_credit": {
              "type": "number",
              "minimum": 0
            },
            "original_balance_credit": {
              "type": "object",
              "required": ["key", "value"],
              "additionalProperties": false,
              "properties": {
                "key": {
                  "type": "string",
                  "enum": ["original_balance", "credit"]
                },
                "value": {
                    "type": "number"
                }
              }
            },
            "balance": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "minItems": 1,
        "maxItems": 13
      },
      "collection_statuses": {
        "type": ["array", "null"],
        "items": {
          "type": "object",
          "required": [
            "id",
            "created_at",
            "agent_name",
            "account_id",
            "track",
            "case_status",
            "stage",
            "disposition",
            "dates"
          ],
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "integer",
              "minimum": 1
            },
            "created_at": {
              "type": "string",
              "format": "date"
            },
            "agent_name": {
              "type": "string",
              "minLength": 1
            },
            "account_id": {
              "type": "integer",
              "minimum": 1
            },
            "track": {
              "type": "string",
              "minLength": 1
            },
            "case_status": {
              "type": "string",
              "minLength": 1
            },
            "stage": {
              "type": ["string", "null"],
              "minLength": 1
            },
            "disposition": {
              "type": ["string", "null"],
              "minLength": 1
            },
            "dates": {
              "type": ["object", "null"],
              "patternProperties": {
                ".*": {
                  "type": "string",
                  "format": "date"
                }
              }
            }
          }
        }
      },
      "delinquency_reasons": {
        "type": ["array", "null"],
        "items": {
          "type": "object",
          "required": ["id", "created_at", "agent_name", "account_id", "reasons", "notes"],
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "integer",
              "minimum": 1
            },
            "created_at": {
              "type": "string",
              "format": "date"
            },
            "agent_name": {
              "type": "string",
              "minLength": 1
            },
            "account_id": {
              "type": "integer",
              "minimum": 1
            },
            "reasons": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            },
            "notes": {
              "type": ["string", "null"],
              "minLength": 1
            }
          }
        }
      },
      "contact_logs": {
        "type": ["array", "null"],
        "items": {
          "type": "object",
          "required": [
            "id",
            "created_at",
            "agent_name",
            "account_id",
            "channel",
            "outcome",
            "notes",
            "follow_up_date",
            "ptp_amount",
            "ptp_date"
          ],
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "integer"
            },
            "created_at": {
              "type": "string",
              "format": "date"
            },
            "agent_name": {
              "type": "string",
              "minLength": 1
            },
            "account_id": {
              "type": "integer",
              "minimum": 1
            },
            "channel": {
              "type": "string",
              "minLength": 1
            },
            "outcome": {
              "type": "string",
              "minLength": 1
            },
            "notes": {
              "type": ["string", "null"],
              "minLength": 1
            },
            "follow_up_date": {
              "type": ["string", "null"],
              "format": "date"
            },
            "ptp_amount": {
              "type": ["integer", "null"],
              "minimum": 0
            },
            "ptp_date": {
              "type": ["string", "null"],
              "format": "date"
            }
          }
        }
      }
    }
  }
}
