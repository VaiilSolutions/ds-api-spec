{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "created_at", "agent_name", "account_id", "reasons", "notes"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "created_at": {
      "type": "string",
      "format": "date"
    },
    "agent_name": {
      "type": "string",
      "minLength": 1
    },
    "account_id": {
      "type": "integer",
      "minimum": 1
    },
    "reasons": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "notes": {
      "type": ["string", "null"],
      "minLength": 1
    }
  }
}
