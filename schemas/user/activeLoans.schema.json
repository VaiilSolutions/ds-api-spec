{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id",
      "loanType",
      "openDate",
      "defaultScore",
      "reasons",
      "coreStatus",
      "paymentHistory",
      "nextPaymentDue",
      "paymentAmountDue",
      "utilization",
      "promiseToPay",
      "loanModification",
      "defaultSleuthStatus",
      "loanRelationship",
      "contactHistory",
      "loanPayments",
      "loanBalances"
    ],
    "additionalProperties": false,
    "properties": {
      "id": {
        "type": "integer",
        "minimum": 1
      },
      "loanType": {
        "type": "string",
        "minLength": 1
      },
      "openDate": {
        "type": "string",
        "format": "date"
      },
      "defaultScore": {
        "type": "number",
        "minimum": 0,
        "maximum": 100
      },
      "reasons": {
        "type": "string",
        "minLength": 1
      },
      "coreStatus": {
        "type": "string",
        "minLength": 1
      },
      "paymentHistory": {
        "type": "string",
        "minLength": 1
      },
      "nextPaymentDue": {
        "type": "string",
        "format": "date"
      },
      "paymentAmountDue": {
        "type": "number",
        "minimum": 0
      },
      "utilization": {
        "type": "number",
        "minimum": 0,
        "maximum": 100
      },
      "promiseToPay": {
        "type": ["string", "null"],
        "format": "date"
      },
      "loanModification": {
        "type": ["string", "null"],
        "format": "date"
      },
      "defaultSleuthStatus": {
        "type": "string",
        "minLength": 1
      },
      "loanRelationship": {
        "type": "string",
        "minLength": 1
      },
      "contactHistory": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["id", "date", "type", "notes", "status", "agent"],
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "integer"
            },
            "date": {
              "type": "string",
              "format": "date"
            },
            "type": {
              "type": "string",
              "minLength": 1
            },
            "notes": {
              "type": "string",
              "minLength": 1
            },
            "status": {
              "type": "string",
              "minLength": 1
            },
            "agent": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "minItems": 1
      },
      "loanPayments": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["month", "due", "paid"],
          "additionalProperties": false,
          "properties": {
            "month": {
              "type": "string",
              "enum": ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"]
            },
            "due": {
              "type": "number",
              "minimum": 0
            },
            "paid": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "minItems": 1,
        "maxItems": 13
      },
      "loanBalances": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["month", "credit", "balance"],
          "additionalProperties": false,
          "properties": {
            "month": {
              "type": "string",
              "enum": ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"]
            },
            "credit": {
              "type": "number",
              "minimum": 0
            },
            "balance": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "minItems": 1,
        "maxItems": 13
      }
    }
  }
}
